N, M = map(int, input().split())

matrix = []
for _ in range(N):
    row = list(map(int, input().split()))
    matrix.append(row)

max_sum = -float('inf')  # Initialize max sum to a very small number
best_submatrix = []  # To store the best 3x3 submatrix

for i in range(N - 2):
    for j in range(M - 2):
        current_submatrix = []
        for k in range(3):  # Loop to extract 3 rows
            current_row = []
            for l in range(3):
                current_row.append(matrix[i + k][j + l])
            current_submatrix.append(current_row)

        current_sum = 0
        for row in current_submatrix:
            for element in row:
                current_sum += element

        if current_sum > max_sum:
            max_sum = current_sum
            best_submatrix = current_submatrix

print(f"Sum = {max_sum}")
for row in best_submatrix:
    for element in row:
        print(element, end=" ")
    print()
